<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardviewcinema"
    android:layout_margin="16dp"
    card_view:cardBackgroundColor="#227C9D"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:contentPadding="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cinema_image"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/cinema_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_toEndOf="@id/cinema_image"
            android:layout_toRightOf="@id/cinema_image"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/cinema_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eslogan"
            android:layout_toEndOf="@id/cinema_image"
            android:layout_toRightOf="@id/cinema_image"
            android:layout_below="@id/cinema_title"/>

        <Button
            android:id="@+id/cinema_button"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/cinema_image"
            android:text="Ver locaciones"
            android:textSize="12sp"
            android:layout_toRightOf="@id/cinema_image"
            android:layout_below="@id/cinema_details"
            />



    </RelativeLayout>
</androidx.cardview.widget.CardView>
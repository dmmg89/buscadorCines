<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieOption.SelectedMovieTopFragment">

  <RelativeLayout
      android:layout_height="match_parent"
      android:layout_width="match_parent">


      <ImageView
          android:id="@+id/selectedMovieImage"
          android:layout_width="90dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="16dp"/>

      <TextView
          android:id="@+id/selectedMovieTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Title"
          android:textStyle="bold"
          android:textSize="24sp"
          android:layout_marginTop="24dp"
          android:layout_marginLeft="24dp"
          android:layout_toEndOf="@id/selectedMovieImage"/>

      <TextView
          android:id="@+id/selectedMovieDetails"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Details"
          android:textSize="16sp"
          android:layout_marginLeft="24dp"
          android:layout_below="@id/selectedMovieTitle"
          android:layout_toEndOf="@id/selectedMovieImage"/>



  </RelativeLayout>


</FrameLayout>